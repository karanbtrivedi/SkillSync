@model SkillSync.Application.ViewModels.ProjectViewModel

@{
    ViewData["Title"] = "Delete Project";
}

<h2>Delete Project</h2>

<h4>Are you sure you want to delete this project?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Start Date</dt>
    <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Due Date</dt>
    <dd class="col-sm-10">@Model.DueDate.ToShortDateString()</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
