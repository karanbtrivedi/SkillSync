@model IEnumerable<SkillSync.Web.ViewModels.TaskViewModel>

@{
    ViewData["Title"] = "Tasks";
}

<h2>Task List</h2>

<a href="@Url.Action("Create", "Task")" class="btn btn-primary">Create New Task</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Due Date</th>
            <th>Project</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Status</td>
                <td>@task.DueDate.ToString("yyyy-MM-dd")</td>
                <td>@task.ProjectName</td>
                <td>
                    <a href="@Url.Action("Edit", "Task", new { id = task.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Task", new { id = task.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
