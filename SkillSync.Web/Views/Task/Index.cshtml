@model IEnumerable<SkillSync.Web.ViewModels.TaskViewModel>

<h2>Task List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Due Date</th>
            <th>Project</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Status</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@task.ProjectName</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Details", "Task", new { id = task.Id })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
