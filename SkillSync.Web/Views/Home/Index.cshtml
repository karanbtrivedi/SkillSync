@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5">
    <h1 class="display-4">Welcome to SkillSync</h1>
    <p class="lead">Your smart task & project management system using ASP.NET Core 8.</p>

    @if (User.Identity.IsAuthenticated)
    {
        <p>Hello, <strong>@User.Identity.Name</strong>! You are logged in.</p>
    }
    else
    {
        <p>Please <a asp-controller="Account" asp-action="Login">Login</a> or <a asp-controller="Account" asp-action="Register">Register</a>.</p>
    }
</div>
